@model IEnumerable<Store.Web.Models.Dto.ProductDto>

<br/> <br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Products list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus">Create new product</i></a>
        </div>
    </div>
    <table class="table">
        <tr class="">
            <th>Name</th>
            <th>Category name</th>
            <th>Price</th>
            <th></th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a asp-action="" class="btn btn-success" asp-route-productId="@item.ProductId"><i class="fas fa-edit"></i></a>
                        <a asp-action="" class="btn btn-danger" asp-route-productId="@item.ProductId"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>